<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.birt.build.package</groupId>
		<artifactId>org.eclipse.birt.build.package-parent</artifactId>
		<version>4.23.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<groupId>org.eclipse.birt</groupId>
	<artifactId>birt-runtime-test</artifactId>
	<packaging>jar</packaging>
	<properties>
		<birtpackages.basedir>${project.parent.basedir}</birtpackages.basedir>
		<birt.runtime.unpack.dir>${project.build.directory}/birt-runtime</birt.runtime.unpack.dir>
		<birt.osgi.unpack.dir>${project.build.directory}/birt-runtime-osgi</birt.osgi.unpack.dir>
		<argLine></argLine>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit-version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${maven.dependency.plugin.version}</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.eclipse.birt</groupId>
									<artifactId>birt-runtime</artifactId>
									<version>${project.version}</version>
									<type>zip</type>
									<classifier>runtime</classifier>
									<overWrite>true</overWrite>
									<outputDirectory>${birt.runtime.unpack.dir}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.birt</groupId>
									<artifactId>birt-runtime-osgi</artifactId>
									<version>${project.version}</version>
									<type>zip</type>
									<classifier>runtime</classifier>
									<overWrite>true</overWrite>
									<outputDirectory>${birt.osgi.unpack.dir}</outputDirectory>
								</artifactItem>
							</artifactItems>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven-surefire-plugin-version}</version>
				<configuration>
					<skipTests>${skipTests}</skipTests>
					<useModulePath>false</useModulePath>
					<forkCount>1</forkCount>
					<reuseForks>false</reuseForks>
				</configuration>
				<executions>
					<!--Execution #1: Testing the Standard BIRT Runtime -->
					<execution>
						<id>test-birt-runtime</id>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<!-- Run only RuntimeTest -->
							<useSystemClassLoader>false</useSystemClassLoader>
							<includes>
								<include>**/RuntimeTest.java</include>
							</includes>
							<!-- Adds only the standard runtime to the classpath -->
							<argLine>
								--add-opens java.base/java.lang=ALL-UNNAMED
								--add-opens java.base/java.lang.reflect=ALL-UNNAMED
								--add-opens java.base/java.io=ALL-UNNAMED
								--add-opens java.base/java.util=ALL-UNNAMED
								--add-opens java.base/java.net=ALL-UNNAMED
								--add-opens java.base/sun.nio.ch=ALL-UNNAMED
								--add-exports java.base/jdk.internal.loader=ALL-UNNAMED
								--add-exports java.base/jdk.internal.misc=ALL-UNNAMED
								--illegal-access=permit
							</argLine>
						</configuration>
					</execution>

					<!-- Execution #2: Testing BIRT OSGi Runtime -->
					<execution>
						<id>test-birt-runtime-osgi</id>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<systemPropertyVariables>
								<useSystemClassLoader>true</useSystemClassLoader>
								<osgi.clean>true</osgi.clean>
								<osgi.console>none</osgi.console>
								<osgi.noShutdown>false</osgi.noShutdown>
								<BIRT_HOME>
									${project.build.directory}/birt-runtime-osgi/ReportEngine/platform</BIRT_HOME>
							</systemPropertyVariables>
							<!-- Run  only OsgiRuntimeTest -->
							<includes>
								<include>**/OsgiRuntimeTest.java</include>
							</includes>
							<!-- Adds only the OSGi runtime to the classpath -->
							<argLine>
								<!-- Required for Java 21 + OSGi --> 
								${argLine} 
								--add-opens java.base/java.lang=ALL-UNNAMED
								--add-opens java.base/java.lang.reflect=ALL-UNNAMED --add-opens
								java.base/java.io=ALL-UNNAMED --add-opens
								java.base/java.util=ALL-UNNAMED --add-opens
								java.base/java.net=ALL-UNNAMED --add-opens
								java.base/sun.nio.ch=ALL-UNNAMED --add-exports
								java.base/jdk.internal.loader=ALL-UNNAMED --add-exports
								java.base/jdk.internal.misc=ALL-UNNAMED 
								</argLine>
							<systemPropertyVariables>
								<org.eclipse.equinox.plurl.disable>true</org.eclipse.equinox.plurl.disable>
							</systemPropertyVariables>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
